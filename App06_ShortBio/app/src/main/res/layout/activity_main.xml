<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Sobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:id="@+id/btnSobre"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Formação"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFormacao"
            android:layout_marginTop="10dp"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSobre"/>
    <Button
            android:text="Experiência"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnExperiencia"
            android:layout_marginTop="10dp"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/btnFormacao"/>
    <Button
            android:text="Objetivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnObjetivo"
            android:layout_marginTop="10dp"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/btnExperiencia"
    />
</androidx.constraintlayout.widget.ConstraintLayout>